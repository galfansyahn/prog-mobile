<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="NEW NEWS" />

    <Button
        android:id="@+id/btnNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Halaman Berita"
        android:onClick="openNews" />

    <Button
        android:id="@+id/btnNewsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Berita"
        android:onClick="openNewsList" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Berita"
        android:onClick="openCredit" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil Pengguna"
        android:onClick="openProfile" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pengaturan"
        android:onClick="openSettings" />

    <!-- Daftar anggota kelompok -->
    <TextView
        android:id="@+id/textViewAnggota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Anggota Kelompok:"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewArga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Arga Satria Ramadhan"
        android:gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewMuch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Much Firmansyah Tubira"
        android:gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewFarid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Farid Maulana Yusuf"
        android:gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewArif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. M. Arif Rahman"
        android:gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewNaufal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Naufal Galfan Syah"
        android:gravity="center"
        android:textSize="16dp" />

</LinearLayout>
